#!/bin/sh

start() {
	printf "Starting mosquitto: "
	start-stop-daemon -S -q -m -b -p /var/run/kisslight.pid \
		--exec kiss-light
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
stop() {
	printf "Stopping mosquitto: "
	start-stop-daemon -K -q -p /var/run/kisslight.pid
	[ $? = 0 ] && echo "OK" || echo "FAIL"
}
restart() {
	stop
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?
